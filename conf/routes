# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# User
POST /user/connect                    controllers.UserController.connect
POST /user/create                     controllers.UserController.create

# Power station
POST /power_station/create            controllers.PowerStationController.create
POST /power_station/use               controllers.PowerStationController.use
POST /power_station/usage             controllers.PowerStationController.usage

# Map static resources from the /public folder to the /assets URL path
GET  /assets/*file                    controllers.Assets.versioned(path="/public", file: Asset)
